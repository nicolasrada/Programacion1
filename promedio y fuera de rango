
#include "stdafx.h"
#include<iostream>
#include "conio.h"
using namespace std;

int main() {
	float a;
	float b;
	float c;
	float d;
	cout << ("ingrese tres numeros") << endl;
	cin >> a;
	cin >> b;
	cin >> c;
	if ((a<=10 && a>=0)) {
		if ((b<=10 && b>=0)) {
			if ((c<=10 && c>=0)) {
				d = (a+b+c)/3;
			} else {
				cout << ("El tercer numero esta fuera de rango") << endl;
			}
		} else {
			cout << ("el segundo numero esta fuera de rango") << endl;
		}
	} else {
		cout << ("el primer numero esta fuera de rango") << endl;
	}
	return 0;
}

